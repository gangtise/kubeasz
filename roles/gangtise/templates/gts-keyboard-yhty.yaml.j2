---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: gts-keyboard-yhty
  namespace: {{ spring_app_namespace }}
spec:
  progressDeadlineSeconds: 600
  replicas: 1
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: gts-keyboard-yhty
  strategy:
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
    type: RollingUpdate
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: gts-keyboard-yhty
    spec:
      containers:
        - env:
            - name: ES_CLUSTER_NAME
              value: elasticsearch
            - name: ES_NODES
              value: '10.0.2.10:9300,10.0.2.11:9300,10.0.2.12:9300'
          envFrom:
            - configMapRef:
                name: spring-config
          image: {{ keyboard_yhty_image }}
          imagePullPolicy: IfNotPresent
          name: gts-keyboard-yhty
          ports:
            - containerPort: 13006
              protocol: TCP
          resources:
            limits:
              cpu: 200m
              memory: 800Mi
            requests:
              cpu: 200m
              memory: 800Mi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      terminationGracePeriodSeconds: 30

---
apiVersion: v1
kind: Service
metadata:
  name: gts-keyboard-yhty
  namespace: {{ spring_app_namespace }}
spec:
  clusterIP: None
  ports:
    - port: 13006
      protocol: TCP
      targetPort: 13006
  selector:
    app: gts-keyboard-yhty
  type: ClusterIP

