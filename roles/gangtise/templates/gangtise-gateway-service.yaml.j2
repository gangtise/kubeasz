---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: gangtise-gateway-service
  namespace: {{ spring_app_namespace }}
spec:
  progressDeadlineSeconds: 600
  replicas: 1
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: gangtise-gateway-service
  strategy:
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
    type: RollingUpdate
  template:
    metadata:
      annotations:
        kubesphere.io/containerSecrets: ''
      creationTimestamp: null
      labels:
        app: gangtise-gateway-service
    spec:
      imagePullSecrets:
      - name: {{ container_secret }}
      containers:
        - envFrom:
            - configMapRef:
                name: spring-config
          image: {{ gateway_service_image }}
          imagePullPolicy: IfNotPresent
          livenessProbe:
            exec:
              command:
                - date
            failureThreshold: 3
            initialDelaySeconds: 180
            periodSeconds: 10
            successThreshold: 1
            timeoutSeconds: 1
          name: gangtise-gateway-service
          ports:
            - containerPort: 1925
              name: http-1925
              protocol: TCP
          resources:
            limits:
              cpu: '1'
              memory: 960Mi
            requests:
              cpu: 300m
              memory: 960Mi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      terminationGracePeriodSeconds: 30

---
apiVersion: v1
kind: Service
metadata:
  name: gangtise-gateway-service
  namespace: {{ spring_app_namespace }}
spec:
  ports:
    - nodePort: 30001
      port: 1925
      protocol: TCP
      targetPort: 1925
  selector:
    app: gangtise-gateway-service
  type: NodePort

