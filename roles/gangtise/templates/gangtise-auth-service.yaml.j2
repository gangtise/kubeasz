---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: gangtise-auth-service
  namespace: {{ spring_app_namespace }}
spec:
  progressDeadlineSeconds: 600
  replicas: 2
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: gangtise-auth-service
  strategy:
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
    type: RollingUpdate
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: gangtise-auth-service
    spec:
      containers:
        - envFrom:
            - configMapRef:
                name: spring-config
          image: {{ auth_service_image }}
          imagePullPolicy: IfNotPresent
          name: gangtise-auth-service
          ports:
            - containerPort: 10010
              protocol: TCP
          resources:
            limits:
              cpu: '2'
              memory: 960Mi
            requests:
              cpu: '1'
              memory: 960Mi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      terminationGracePeriodSeconds: 30

---
apiVersion: v1
kind: Service
metadata:
  name: gangtise-auth-service
  namespace: {{ spring_app_namespace }}
spec:
  ports:
    - port: 10010
      protocol: TCP
      targetPort: 10010
  selector:
    app: gangtise-auth-service
  type: ClusterIP

